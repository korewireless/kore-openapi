      "200GetClient": {
        "type": "object",
        "properties": {
          "account_id": {
            "type": "string",
            "description": "Identifier of the account to which the client belongs. Defaults to the account scope if not specified."
          },
          "date_created": {
            "type": "string",
            "example": "Fri, 05 Apr 2024 11:08:14 GMT",
            "description": "Date and time when the client was created."
          },
          "name": {
            "type": "string",
            "example": "Test client",
            "description": "Name of the client."
          },
          "client_type": {
            "type": "string",
            "example": "standard",
            "description": "Type of the client, either 'admin' or 'standard'.",
            "enum": [
              "admin",
              "standard"
            ]
          },
          "locked": {
            "type": "boolean",
            "example": true,
            "description": "Indicates whether the client is locked. If true, the client is locked; if false, it is unlocked; if null, it has not been locked."
          },
          "client_owner": {
            "type": "string",
            "example": "xyz@korewireless.com",
            "description": "Email address of the client owner. If not specified, defaults to the account owner's email."
          },
          "client_id": {
            "type": "string",
            "example": "kc_01htpz3htn",
            "description": "Unique identifier for the client."
          }
        }
      },
