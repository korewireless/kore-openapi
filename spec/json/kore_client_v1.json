  "components": {
    "schemas": {
      "200GetClients": {
        "type": "object",
        "properties": {
          "clients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "account_id": {
                  "type": "string",
                  "example": "CO1686726qu12",
                  "description": "Identifier of the account to which the client belongs."
                },
                "date_created": {
                  "type": "string",
                  "example": "Fri, 05 Apr 2024 11:08:14 GMT",
                  "description": "Date and time when the client was created."
                },
                "name": {
                  "type": "string",
                  "example": "Test client",
                  "description": "Name of the client."
                },
                "client_type": {
                  "type": "string",
                  "example": "standard",
                  "description": "Type of the client, either 'admin' or 'standard'.",
                  "enum": [
                    "admin",
                    "standard"
                  ]
                },
                "locked": {
                  "type": "boolean",
                  "example": true,
                  "description": "Indicates whether the client is locked."
                },
                "client_owner": {
                  "type": "string",
                  "example": "xyz@korewireless.com",
                  "description": "Email address of the client owner."
                },
                "client_id": {
                  "type": "string",
                  "example": "kc_01htpz3htnqa",
                  "description": "Unique identifier for the client."
                }
              }
            }
          },
          "meta": {
            "type": "object",
            "properties": {
              "page_number": {
                "type": "number",
                "example": 2,
                "description": "Current page number of the returned client list."
              },
              "count": {
                "type": "number",
                "example": 35,
                "description": "Total number of clients returned in the response."
              },
              "previous_page_url": {
                "type": "string",
                "example": "https://client.api.korewireless.com/v1/clients?page_size=10&page_number=1&account_id=CO1686726qunzorx123456",
                "description": "Previous page url in client list."
              },
              "next_page_url": {
                "type": "string",
                "example": "https://client.api.korewireless.com/v1/clients?page_size=10&page_number=3&account_id=CO1686726qunzorx123456",
                "description": "Next page url in client list."
              },
              "page_size": {
                "type": "number",
                "example": 10,
                "description": "Number of clients per page in the returned client list."
              }
            }
          }
        }
      },
